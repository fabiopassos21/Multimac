unit uFormCadastroCFOP;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, Vcl.StdCtrls, CurvyControls,
  Vcl.ExtCtrls, Vcl.Mask, Vcl.DBCtrls;

type
  TFormCadastroCFOP = class(TForm)
    Panel1: TPanel;
    LinkLabel1: TLinkLabel;
    Panel2: TPanel;
    CurvyPanel2: TCurvyPanel;
    Label1: TLabel;
    FDQueryNatureza: TFDQuery;
    DSNATUREZA: TDataSource;
    fdqueryCFOP: TFDQuery;
    DSCFOP: TDataSource;
    fdqueryCFOPID_CFOP: TIntegerField;
    fdqueryCFOPCFOP: TWideStringField;
    fdqueryCFOPNATUREZA: TIntegerField;
    DBEdit1: TDBEdit;
    Button1: TButton;
    FDTransaction1: TFDTransaction;
    Radio_cupom: TRadioButton;
    Radio_Entrada: TRadioButton;
    Radio_devolucao: TRadioButton;
    Radio_Venda: TRadioButton;
    fdqueryCFOPTIPO: TWideStringField;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormCadastroCFOP: TFormCadastroCFOP;

implementation

{$R *.dfm}

uses uDmDados;

procedure TFormCadastroCFOP.Button1Click(Sender: TObject);
begin
if Radio_Venda.Checked then

begin
  fdqueryCFOP.Params.ParamByName('tipo').Value := 'SAIDA';

end;

if fdqueryCFOP.STATE IN [dsedit,dsinsert] then
begin
FDTransaction1.StartTransaction;
fdqueryCFOP.Post;
FDTransaction1.CommitRetaining;




end

end;

procedure TFormCadastroCFOP.FormCreate(Sender: TObject);
begin

FDQueryNatureza.Open();
FDQueryNatureza.FetchAll;

end;

end.
