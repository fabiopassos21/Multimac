procedure TFormMain.FormShow(Sender: TObject);

begin
HorarioLimite := EncodeTime(18, 0, 0, 0);
if TimePicker1.Time > HorarioLimite then begin
  Label1.Caption:='(14)99727-1534';
end
ELSE
begin
  label1.Caption:='(14)3879-8010';
end;




end;

