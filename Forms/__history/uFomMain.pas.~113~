procedure TFormMain.FormShow(Sender: TObject);

begin
horario:=now;

if FormatDateTime('hh:mm:ss',horario) > FormatDateTime('hh:mm:ss',TimePicker2) then begin
  Label1.Caption:='(14)99727-1534';
end
ELSE
begin
  label1.Caption:='(14)3879-8010';
end;




end;

